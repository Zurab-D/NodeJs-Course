doctype html
html

  head
    title Login
    link(rel="icon" href="http://learn.javascript.ru/img/favicon/favicon.png")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/css/bootstrap.min.css")
    link(rel="stylesheet" href="/style.css")

  body
    .container
      h1 Please log in first
      .row
        form.form-horizontal(action="/login" method="post")
          .form-group
            label.col-sm-2.control-label(for="email") Email
            .col-sm-10
              input#email.form-control(type="email" name="email" placeholder="mail@mail.com" required autofocus)
          .form-group
            label.col-sm-2.control-label(for="password") Password
            .col-sm-10
              input#password.form-control(type="password" name="password" required)
          .form-group
            .row
              .col-sm-8
                .col-sm-offset-2.col-sm-10
                  button.btn.btn-primary.btn-block(type="submit") Login
              .col-sm-4
                .col-sm-offset-2.col-sm-10
                  a.btn.btn-info.btn-block(href="/register") Go to Register

      .row
        .col-sm-6
          p Or Login via VK
          a.btn.btn-default.btn-block(href="/auth/vkontakte") VK

        .col-sm-6
          p Or Login via Facebook
          a.btn.btn-default.btn-block(href="/auth/facebook") Facebook
